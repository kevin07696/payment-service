# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=50051

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=payment_service
DB_SSL_MODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# North Payment Gateway Configuration
# Get these credentials from North Payment Gateway support
# Use different values for sandbox vs production environments

# Sandbox (for testing):
# NORTH_BASE_URL=https://sandbox.north.com/api/browserpost
# NORTH_EPI_ID=7000-700010-1-1
# NORTH_EPI_KEY=sandbox-secret-key

# Production (for live transactions):
NORTH_BASE_URL=https://api.north.com/api/browserpost
NORTH_EPI_ID=YOUR-PRODUCTION-EPI-ID-HERE
NORTH_EPI_KEY=YOUR-PRODUCTION-EPI-KEY-HERE
NORTH_TIMEOUT=30

# EPI-Id Format: CUST_NBR-MERCH_NBR-TERM_NBR-1
# Example: 7000-700010-1-1
#   CUST_NBR: Customer number assigned by North
#   MERCH_NBR: Merchant number assigned by North
#   TERM_NBR: Terminal number (usually 1)

# Logger Configuration
LOG_LEVEL=info
LOG_DEVELOPMENT=false

# Observability Configuration
METRICS_PORT=9090
