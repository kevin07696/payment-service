# Server Configuration
PORT=8080              # gRPC server port
HTTP_PORT=8081         # HTTP server port for cron endpoints

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=payment_service
DB_SSL_MODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# EPX Gateway Configuration (for payment processing)
# EPX handles all payment operations: Browser Post, Server Post, etc.
# Get these credentials from North/EPX support

# Sandbox (for testing):
EPX_BASE_URL=https://sandbox.north.com
EPX_TIMEOUT=30

# Production (for live transactions):
# EPX_BASE_URL=https://api.north.com
# EPX_TIMEOUT=30

# North Merchant Reporting API (for chargeback/dispute data - READ-ONLY)
# This API is used to poll dispute data from North
# Merchants respond to disputes via North's web portal, not via our API

# Sandbox:
NORTH_API_URL=https://api.north.com
NORTH_TIMEOUT=30

# Production:
# NORTH_API_URL=https://api.north.com
# NORTH_TIMEOUT=30

# Cron Authentication
# Secret token for authenticating cron job HTTP requests
CRON_SECRET=change-me-in-production

# Environment
ENVIRONMENT=development  # development, sandbox, or production

# Logger Configuration
LOG_LEVEL=info
LOG_DEVELOPMENT=false
